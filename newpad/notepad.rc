    VK_F5,     M_DATETIME, VIRTKEY
    "G",       M_GOTO,     VIRTKEY, CONTROL
    "F",       M_FIND,     VIRTKEY, CONTROL, NOINVERT
    "H",       M_REPLACE,  VIRTKEY, CONTROL, NOINVERT
    VK_BACK,   M_UNDO,     VIRTKEY, ALT
    "Z",       M_UNDO,     VIRTKEY, CONTROL
    "X",       M_CUT,      VIRTKEY, CONTROL
